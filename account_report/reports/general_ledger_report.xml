<odoo>
<template id="custom_external_layout_standard" inherit_id="web.external_layout_standard">
    <xpath expr="//div[contains(@t-attf-class, 'header')]" position="attributes">
        <attribute name="style">font-size: 90px;</attribute>
    </xpath>

    <xpath expr="//div[contains(@t-attf-class, 'footer')]" position="attributes">
        <attribute name="style">font-size: 90px;</attribute>
    </xpath>

    <xpath expr="//div[contains(@t-attf-class, 'article')]" position="attributes">
        <attribute name="style">font-size: 89px;</attribute>
    </xpath>
</template>


<template id="custom_internal_layout" inherit_id="web.internal_layout">
    <xpath expr="//div[@class='header']" position="attributes">
        <attribute name="style">font-size: 90px;</attribute>
    </xpath>
    <xpath expr="//div[@class='article']" position="attributes">
        <attribute name="style">font-size: 90px;</attribute>
    </xpath>
</template>

<template id="custom_basic_layout" inherit_id="web.basic_layout">
    <xpath expr="//div[@class='article']" position="attributes">
        <attribute name="style">font-size: 90px;</attribute>
    </xpath>
</template>


   <template id="custom_external_layout_bold" inherit_id="web.external_layout_bold">
        <!-- تكبير الخط في القالب الخارجي (Bold) -->
        <xpath expr="//div[contains(@class, 'o_clean_header')]" position="attributes">
            <attribute name="style">font-size: 88px;</attribute>
        </xpath>
        <xpath expr="//div[contains(@t-attf-class, 'article')]" position="attributes">
            <attribute name="style">font-size: 88px;</attribute>
        </xpath>
        <xpath expr="//div[contains(@t-attf-class, 'footer')]" position="attributes">
            <attribute name="style">font-size: 88px;</attribute>
        </xpath>
    </template>

</odoo>