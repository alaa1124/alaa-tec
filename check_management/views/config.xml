<odoo>
    <record id="ks_res_config_settings_moddele_account" model="ir.ui.view">
        <field name="name">ks.res.config.settings.view.form.inherit.account.middle</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="50"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="Accounting" string="Accounting" name="account" groups="account.group_account_manager">
                    <block title="Cheques Setting">
                        <setting invisible="has_chart_of_accounts == False">
                            <div class="o_form_label">Accounts</div>
                            <div class="text-muted">
                                Set default Middle Account Received
                            </div>
                            <div class="content-group">
                                <field name="middle_account" string="Middle Account Received"/>
                                <field name="ks_middle_account" string="Middle Account Received (KS)"/>
                                <div class="row mt16">
                                    <label for="ks_payment_cash" class="col-md-3 o_light_label"/>
                                    <field name="ks_payment_cash"/>
                                    <label for="ks_payment_return_cash" class="col-md-3 o_light_label"
                                           invisible="ks_payment_cash == False"/>
                                    <field name="ks_payment_return_cash"
                                           invisible="ks_payment_cash == False"/>
                                </div>
                            </div>
                        </setting>
                        <setting invisible="has_chart_of_accounts == False">
                            <div class="o_form_label">Accounts</div>
                            <div class="text-muted">
                                Set default Middle Account Send
                            </div>
                            <div class="content-group">
                                <field name="ks_middle_account_send" string="Middle Account Send"/>
                                <field name="ks_payment_vendor"/>
                                <div class="row mt16">
                                    <label for="ks_payment_cash_send" class="col-md-3 o_light_label"/>
                                    <field name="ks_payment_cash_send"/>
                                    <label for="ks_payment_return_cash_send" class="col-md-3 o_light_label"
                                           invisible="ks_payment_cash_send == False"/>
                                    <field name="ks_payment_return_cash_send"
                                           invisible="ks_payment_cash_send == False"/>
                                </div>
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>