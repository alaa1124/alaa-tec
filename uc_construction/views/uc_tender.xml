        <record id="uc_tender_tree_view" model="ir.ui.view">
            <field name="name">uc.tender.tree</field>
            <field name="model">uc.tender</field>
            <field name="arch" type="xml">
                <list string="Tender">
                    <field optional="show" name="name"/>
                    <field optional="show" name="description"/>
                    <field optional="show" name="consultant_id"/>
                    <field optional="show" name="customer_id"/>
                    <field optional="show" name="projectmanager_id"/>
                    <field optional="show" name="start_date"/>
                    <field optional="show" name="end_date"/>
                    <field optional="show" name="create_date"/>
                    <field name="note" optional="show"/>
                    <field name="tag_ids" widget="many2many_tags" optional="show"/>
                    <field name="consultancy_fees" optional="show"/>
                    <field name="taxes_fees" optional="show"/>
                    <field name="bank_fees" optional="show"/>
                    <field name="clearing_fees" optional="show"/>
                    <field name="site_fees" optional="show"/>
                    <field name="Project_fees" optional="show"/>
                    <field name="other_fees" optional="show"/>
                </list>
            </field>
        </record>

