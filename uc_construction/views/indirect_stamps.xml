<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="indirect_stamps_tree" model="ir.ui.view">
            <field name="name">indirect_guard_tree</field>
            <field name="model">uc.indirect.stamps</field>
            <field name="arch" type="xml">
                <list string="">
                    <field name="stamp_id" options="{'no_open': True, 'no_create': True}" optional="show"/>
                    <field name="prectange"/>
                    <field name="value" sum="Total" optional="show"/>
                    <field name="company_currency" invisible="1"/>
                    <!--                    <field name="company_currency" optional="show"/>-->
                </list>
            </field>
        </record>


        <record id="indirect_stamps_form" model="ir.ui.view">
            <field name="name">indirect_guard_form</field>
            <field name="model">uc.indirect.stamps</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="stamp_id" options="{'no_open': True, 'no_create': True}"/>
                            <field name="prectange" readonly="is_additional_stamps==True"/>
                            <field name="is_ordinary_stamps" invisible="1"/>
                            <field name="is_additional_stamps" invisible="1"/>
                            <field name="value" force_save="1" sum="Total"
                                   readonly="is_additional_stamps==True or is_ordinary_stamps==True"/>
                            <field name="company_currency" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_indirect_stamps" model="ir.actions.act_window">
            <field name="name">Indirect Stamps</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">uc.indirect.stamps</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('tender_id','=',active_id)]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>


    </data>
</odoo>