<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="rental_contract_tree_view" model="ir.ui.view">
            <field name="name">rental.contract.tree</field>
            <field name="model">rental.contract</field>
            <field name="arch" type="xml">
                <tree >
                    <field name="name"/>
                    <field name="date"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>                                    
                    <field name="building" />  
                    <field name="building_code"/>                                                 
                    <field name="building_unit"/>  
                    <field name="unit_code"/>                           
                    <field name="floor"/>                                          
                    <field name="rental_fee"/>  
                    <field name="insurance_fee"/>                               
                    <field name="address"/> 
                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state ==('confirmed','renew')" decoration-warning="state == 'cancel'"/>
                </tree>
            </field>
        </record>    
            
        <record id="rental_contract_filter" model="ir.ui.view">
          <field name="name">rental.contract.tree.filter</field>
          <field name="model">rental.contract</field>
          <field name="type">search</field>
          <field name="arch" type="xml">
             <search string="Top Search">
                <group>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>                
                    <field name="building"/>  
                    <field name="building_code"/>                                                 
                    <field name="building_unit" options="{'no_create': True, 'no_open': True}"/>
                    <field name="unit_code"/>  
                </group>
                <newline/>
                <group expand="0" string="Group By...">
                    <filter name="user_id" string="Responsible" domain="[]"  context="{'group_by':'user_id'}"/>
                    <filter name="partner_id" string="Partner" domain="[]"  context="{'group_by':'partner_id'}"/>
                    <filter name="building" string="Building" domain="[]"  context="{'group_by':'building'}"/>
                    <filter name="state" string="State" domain="[]"  context="{'group_by':'state'}"/>
                </group>
            </search>
          </field>
        </record>
            
        <record id="rental_contract_form_view" model="ir.ui.view">
            <field name="name">rental.contract.form</field>
            <field name="model">rental.contract</field>
            <field name="arch" type="xml">
                <form string="rental Contract">
                    <header>
                        <button name="action_confirm" type="object" invisible ="state in ('cancel','confirmed','renew')" string="Confirm" class="oe_highlight"/>
                        <button name="action_cancel" type="object" invisible ="state in ('cancel','draft')" string="Cancel" class="oe_highlight"/>
                        <button name="%(action_customer_rental_renew_check)d" type="action" invisible="state != 'confirmed'" string="Renew Contract" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,cancel" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object"
                                    name="view_vouchers"
                                    class="oe_stat_button"
                                    icon="fa-dollar" invisible="voucher_count == 0">
                                <field name="voucher_count" widget="statinfo" string="Vouchers"/>
                            </button>
                            <button type="object"
                                    name="view_entries"
                                    class="oe_stat_button"
                                    icon="fa-book" invisible="entry_count == 0">
                                <field name="entry_count" widget="statinfo" string="Journal Entries"/>
                            </button>
                        </div>
                        <group string="Rental Contract Data">    
                            <group>
                                <field name="name"/> 
                                <field name="date" readonly="state !='draft'" required="1"/>                                                                                
                                <field name="user_id"/>
                                <field name="team_id"/>
                                <field name="partner_id" readonly="state !='draft'"/>
                                <field name="account_analytic_id" readonly="state !='draft'" />                                                               
                                <field name="origin" readonly="state !='draft'"/>
                            </group>
                            <group>
                                <field name="date_from" readonly="state !='draft'"/>                           
                                <field name="date_to" readonly="state !='draft'"/> 
                                <field name="rental_fee" readonly="state !='draft'"/>  
                                <field name="insurance_fee" readonly="state !='draft'"/>  
                                <field name="account_income" />
                                <field name="account_security_deposit" readonly="state !='draft'" />
                            </group>
                            <group string="Location">
                                <field name="country" readonly="state !='draft'"/>                                                                                                
                                <field name="city" readonly="state !='draft'" />                                                                                                
                                <field name="region" readonly="state !='draft'" />                                                                                                
                                <field name="building" readonly="state !='draft'"/>                          
                                <field name="building_code" readonly="state !='draft'"/>
                                <field name="no_of_floors" readonly="state !='draft'"/>
                            </group>                                                                                                                              
                        </group>                    
                        <separator string="Building Unit" colspan="4"/>
                    <group>                      
                        <group>                        
                            <field name="building_unit" options="{'no_create': True, 'no_open': True}" readonly="state !='draft'"/>
                            <field name="unit_code" readonly="state !='draft'"/>                           
                            <field name="floor" readonly="state !='draft'"/>                           
                            <field name="address" readonly="state !='draft'"/>                           
                        </group>  
                        <group>
                            <field name="type" readonly="state !='draft'"/>                           
                            <field name="status" readonly="state !='draft'"/>                           
                            <field name="building_area" readonly="state !='draft'"/>  
                        </group>
                        
                    </group>
                    <notebook colspan="2">
                        <page string="Installments">
                            <field name="loan_line">
                                <tree string="Installments" editable="bottom">
                                    <field widget="handle" name="serial" required="1" readonly="paid ==True"/>
                                    <field name="date" required="1" readonly="paid ==True"/>
                                    <field name="name" required="1" readonly="paid ==True"/>
                                    <field name="amount" required="1" readonly="paid ==True"/>
                                    <field name="paid" readonly="1"/>
                                    <field name="empty_col"/>
                                    <field name="empty_col"/>
                                    <field name="empty_col"/>
                                    <field name="empty_col"/>
                                    <field name="empty_col"/>
                                    <field name="empty_col"/>
                                    <field name="empty_col"/>
                                    <field name="empty_col"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group>
                        <field name="amount_total"/>
                        <field name="paid"/>
                        <field name="balance"/>
                    </group>                    
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="rental_contract_form_action" model="ir.actions.act_window">
            <field name="name">Rental Contract</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rental.contract</field>
            <field name="view_id" ref="rental_contract_tree_view"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new rental Contract
              </p>
            </field>
        </record>
      <menuitem
      id="menu_contracts_main"
      name="Contracts"
      parent="itsys_real_estate.menu_itsys_real_estate"
      sequence="1"/>
                     
      <menuitem action="rental_contract_form_action" 
                id="menu_rental_contract_form_action"
                parent="itsys_real_estate.menu_contracts_main" sequence="40" />            
    </data>
</odoo>
