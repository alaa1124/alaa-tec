<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="unit_reservation_tree_view" model="ir.ui.view">
            <field name="name">unit.reservation.tree</field>
            <field name="model">unit.reservation</field>
            <field name="arch" type="xml">
                <tree >
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="building" />   
                    <field name="building_unit"/>  
                    <field name="user_id"/>                                               
                    <field name="pricing"/>  
                    <field name="building" />                           
                    <field name="building_code"/>                                                 
                    <field name="building_unit"/>                           
                    <field name="unit_code"/>                           
                    <field name="floor"/>                           
                    <field name="address"/>       
                    <field name="state"/>           
                </tree>
            </field>
        </record>

        <record id="unit_reservation_form_view" model="ir.ui.view">
            <field name="name">unit.reservation.form</field>
            <field name="model">unit.reservation</field>
            <field name="arch" type="xml">
                <form string="Building Unit Reservation">
                    <header>
                        <button name="action_confirm" type="object" 
                               invisible ="state != 'draft'"
                                string="Confirm" class="oe_highlight"/>                      
                        <button name="action_contract" type="object" invisible ="state in ['draft', 'contracted', 'canceled']"
                                string="Convert to Contract" class="oe_highlight"/>
                        <button name="action_cancel" type="object" 
                                invisible ="state in ('draft', 'contracted', 'canceled')"
                                string="Cancel" class="oe_highlight"/>                                              
                        <field name="state" 
                               widget="statusbar"                                                               
                               statusbar_visible="draft,confirmed,contracted" />                                                                             
                    </header>                       
                    <sheet>    
                    <div class="oe_right oe_button_box" name="button_box">
                       <field name="contract_id" invisible="1"/>
                       <button type="object"
                           name="view_contract"
                           class="oe_inline oe_stat_button"
                           icon="fa-book" invisible="contract_count == 0">
                           <field name="contract_count" widget="statinfo" string="Contract"/>
                       </button> 
                                             
                    </div>                                         
                    <group>                                               
                        <group string="Reservation Data">                        
                            <field name="name"/>                           
                            <field name="user_id"/>  
	                    <field name="team_id"/>                         
                            <field name="partner_id" readonly="state !='draft'" required="1"/>                           
                            <field name="date" readonly="state !='draft'" required="1"/>                           
                            <field name="date_payment" readonly="state !='draft'" required="1" />    
                        </group>
                        <group>
                          <field name="account_analytic_id" readonly="state !='draft'" />
                          <field name="account_income" readonly="state !='draft'" />  
                        </group>                              
                        <group string="Building">   
                            <field name="country" readonly="state !='draft'" />                                                                                                
                            <field name="city" readonly="state !='draft'"/>                                                                                                
                            <field name="region" readonly="state !='draft'" />                                                                                                
                            <field name="building" readonly="state !='draft'"/>                           
                            <field name="building_code" readonly="state !='draft'"/>                           
                        </group>                      
                    </group>
                        <separator string="Building Unit" colspan="4"/>
                    <group>
                        <group>                        
                            <field name="building_unit" options="{'no_create': True, 'no_open': True}"  readonly="state !='draft'"/>
                            <field name="unit_code" readonly="state !='draft'"/>                           
                            <field name="floor" readonly="state !='draft'"/>                           
                            <field name="address" readonly="state !='draft'"/>                           
                            <field name="pricing" readonly="state !='draft'" />
                        </group>  
                        <group>
                            <field name="type" readonly="state !='draft'"/>                           
                            <field name="status" readonly="state !='draft'"/>                           
                            <field name="building_area" readonly="state !='draft'"/>  
                            <field name="template_id" readonly="state !='draft'" required="1" />                                                            
                        </group>
                    </group>
                    <notebook colspan="2">
                        <page string="Installments">
                            <field name="loan_line" >
                                <tree string="Installments" editable="bottom" >
                                    <field name="serial" widget="handle" required="1"/>
                                    <field name="date" required="1"/>
                                    <field name="name" required="1"/>
                                    <field name="amount" required="1"/>
                                    <field name="paid"/>
                                    <field name="empty_col"/>
                                    <field name="empty_col"/>
                                    <field name="empty_col"/>
                                    <field name="empty_col"/>
                                    <field name="empty_col"/>
                                    <field name="empty_col"/>
                                    <field name="empty_col"/>
                                    <field name="empty_col"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="unit_reservation_form_action" model="ir.actions.act_window">
            <field name="name">Unit Reservation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">unit.reservation</field>
            <field name="view_id" ref="unit_reservation_tree_view"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new Building Unit Reservation
              </p>
            </field>
        </record>

        <record model="ir.cron" id="auto_cancel_reservation_sync">
            <field name="name">Auto Cancel Unit Reservation</field>
            <field name="model_id" ref="model_unit_reservation"/>
            <field name="state">code</field>
            <field name="code">model.auto_cancel_reservation()</field>
            <field name="active" eval="False"/>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>

      <menuitem
        id="menu_reservation_main"
        name="Resevations"
        parent="itsys_real_estate.menu_itsys_real_estate"
      action="unit_reservation_form_action"
      sequence="23"/>

    </data>
</odoo>
