<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="cron_set_unit_free" model="ir.cron">
            <field name="name">Set Expired Unit Reservations to Free</field>
            <field name="model_id" ref="model_product_template"/>
            <field name="code">model._cron_set_product_to_free()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>


        <!-- Inherit Form View to Modify it -->
        <record id="product_ribbon_form_view_state" model="ir.ui.view">
            <field name="name">product.ribbon.form</field>
            <field name="model">product.ribbon</field>
            <field name="inherit_id" ref="website_sale.product_ribbon_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='html']" position="after">
                    <field name="state"/>
                </xpath>

            </field>
        </record>


        <record model="ir.ui.view" id="building_unit_form">
            <field name="name">property.form</field>
            <field name="priority" eval="10"/>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <form string="Real Estate">
                    <header>
                        <button name="make_reservation"
                                invisible = "state !='free'"
                                string="Reservation" type="object"/>
                        <button string="Reset to Free" name="action_draft" type="object" class="btn btn-secondary"
                invisible="state =='free'" data-hotkey="r"/>
                        <field name="state"
                               widget="statusbar"
                               clickable="true"
                               statusbar_visible="free,reserved,sold"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object"
                                    name="view_reservations"
                                    class="oe_stat_button"
                                    icon="fa-book"
                                    invisible ="reservation_count == 0">
                                <field name="reservation_count" widget="statinfo" string="Reservations"/>
                            </button>
                        </div>
                        <field name="image_1920" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <h2><field name="code" placeholder="Property Code"/></h2>
                            <h2><field name="name" placeholder="Property Name"/></h2>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="active"/>
                                <field name="active_contract"/>

<!--                                <field name="multi_image"/>-->
<!--                                <field name="website_published"/>-->
<!--                                <field name="url" widget="url"/>-->
                            </group>
                            <group >
                                <field name="building_id"/>
                                <field name="region_id"/>
                                <field name="city_id"/>
                                <field name="country_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Basic Information">
                                <group>
                                    <group>
                                        <field name="ptype"/>
                                        <field name="rental_fee"/>
                                        <field name="insurance_fee"/>
                                        <field name="status"/>
                                        <field name="building_area"/>
                                        <field name="building_area_net"/>
                                        <field name="land_area"/>
                                        <field name="constructed"/>
                                        <field name="lift"/>
                                        <field name="air_condition"/>
                                        <field name="rooms"/>
                                        <field name="telephon"/>
                                        <field name="internet"/>
                                        <field name="pricing" requied="1"/>
                                        <field name="floor"/>
                                    </group>
                                    <group>
                                        <field name="surface"/>
                                        <field name="garage"/>
                                        <field name="garden"/>
                                        <field name="balcony"/>
                                        <field name="solar_electric"/>
                                        <field name="heating_source"/>
                                        <field name="desc"/>
                                        <field name="electricity_meter"/>
                                        <field name="water_meter"/>
                                        <field name="template_id"/>
                                        <field name="north"/>
                                        <field name="south"/>
                                        <field name="east"/>
                                        <field name="west"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Components List">
                                <field name="component_ids" >
                                    <tree editable="bottom">
                                        <field name="component" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Additional Information">
                                <group>
                                    <group>
                                        <field name="license_code"/>
                                        <field name="license_date"/>
                                        <field name="date_added"/>
                                        <field name="license_location"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Geolocation">
                                <group>
                                    <group>
                                        <field name="address" widget="place_autocomplete" class="oe_inline"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Contacts">
                                <field name="contacts"/>
                            </page>
                            <page string="Notes">
                                <field name="note"/>
                            </page>
                            <page string="E-Commerce">
                                <group>
                                    <field name="type" invisible="1"/>
                                    <field name="public_categ_ids" widget="many2many_tags" string="Categories"/>
                                    <label for="allow_out_of_stock_order" invisible="type in ['service', 'consu']"
                                           string="Out-of-Stock"/>
                                    <div invisible="type in ['service', 'consu']">
                                        <field name="allow_out_of_stock_order" class="oe_inline"/>
                                        Continue Selling
                                    </div>

                                    <label for="show_availability" invisible="type in ['service', 'consu']"
                                           string="Show Available Qty"/>
                                    <div invisible="type in ['service', 'consu']">
                                        <field name="show_availability" class="oe_inline"/>
                                        <span invisible="not show_availability">
                                            <label for="available_threshold" string="only if below"
                                                   class="o_light_label"/>
                                            <field name="available_threshold" class="oe_inline col-1" widget="integer"/>
                                            Units
                                        </span>
                                    </div>
                                    <field name="out_of_stock_message" invisible="type in ['service', 'consu']"/>
                                    <field name="website_ribbon_id" options="{'no_quick_create': True}"/>

                                    <field name="reservation_date"/>
                                    <field name="reservation_end_date"/>
                                    <field name="reserved"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="building_unit_list">
            <field name="name">property.template.tree</field>
            <field name="model">product.template</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <tree string="Building" >
                    <field name="name"/>
                    <field name="code"/>
                    <field name="pricing"/>
                    <field name="building_id"/>
                    <field name="region_id"/>
                    <field name="city_id"/>
                    <!-- <field name="country_id"/> -->
                    <field name="desc"/>
                    <field name="ptype" />
                    <field name="status" />
                    <field name="rooms" />
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="building_unit_kanban">
            <field name="name">property.template.kanban</field>
            <field name="model">product.template</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
               <kanban class="o_hr_employee_kanban" js_class="hr_employee_kanban" sample="1">
                   <field name="id"/>
                   <templates>
                       <t t-name="kanban-box">
                       <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record">
                           <field name="image_1920" widget="image" class="o_kanban_image_fill_left" options="{'zoom': true, 'zoom_delay': 1000, 'background': true, 'preventClicks': false}"/>

                            <div class="oe_kanban_details">
                               <div class="o_kanban_record_top">
                                   <div class="o_kanban_record_headings">

                                       <span t-if="record.name.raw_value" class="o_kanban_record_subtitle"><field name="name"/></span>
                                   </div>
                               </div>

                               <ul>
                                   <li id="last_login"/>
                                   <li t-if="record.status.raw_value" class="o_text_overflow"><b>Status : </b><field name="status"/></li>
                                   <li t-if="record.floor.raw_value" class="o_force_ltr"><b>Floor : </b> <field name="floor"/></li>
                               </ul>
                           </div>
                       </div>
                       </t>
                   </templates>
               </kanban>

            </field>
        </record>


