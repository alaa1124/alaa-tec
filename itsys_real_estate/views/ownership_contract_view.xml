<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ownership_contract_tree_view" model="ir.ui.view">
            <field name="name">ownership.contract.tree</field>
            <field name="model">ownership.contract</field>
            <field name="arch" type="xml">
                <tree default_order="date desc">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="pricing"/>
                    <field name="building"/>
                    <field name="building_code"/>
                    <field name="building_unit"/>
                    <field name="unit_code"/>
                    <field name="floor"/>
                    <field name="address"/>
                    <field name="state" widget="badge" decoration-info="state == 'draft'"
                           decoration-warning="state =='cancel'" decoration-success="state == 'confirmed'"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="ownership_contract_filter" model="ir.ui.view">
            <field name="name">ownership.contract.tree.filter</field>
            <field name="model">ownership.contract</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Top Search">
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="user_id"/>
                        <field name="building"/>
                        <field name="building_code"/>
                        <field name="building_unit" options="{'no_create': True, 'no_open': True}"/>
                        <field name="unit_code"/>
                    </group>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter name="user_id" string="Responsible" domain="[]" context="{'group_by':'user_id'}"/>
                        <filter name="partner_id" string="Partner" domain="[]" context="{'group_by':'partner_id'}"/>
                        <filter name="building" string="Building" domain="[]" context="{'group_by':'building'}"/>
                        <filter name="state" string="State" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="view_own_contract_graph">
            <field name="name">ownership.contract.graph</field>
            <field name="model">ownership.contract</field>
            <field name="arch" type="xml">
                <graph string="Contracts" type="bar">
                    <field name="user_id" type="row"/>
                    <field name="total_amount" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="ownership_contract_form_view" model="ir.ui.view">
            <field name="name">ownership.contract.form</field>
            <field name="model">ownership.contract</field>
            <field name="arch" type="xml">
                <form string="Ownership Contract">
                    <header>
                        <button name="action_confirm" type="object" invisible="state in ('cancel','confirmed')"
                                string="Confirm" class="oe_highlight"/>
                        <button name="action_cancel" type="object" invisible="state =='cancel'" string="Cancel"/>
                        <button string="Reset to draft" name="action_draft" type="object" class="btn btn-secondary"
                                invisible="state =='draft'" data-hotkey="r"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,cancel"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" name="view_vouchers" class="oe_stat_button" icon="fa-dollar"
                                    invisible="voucher_count == 0">
                                <field name="voucher_count" widget="statinfo" string="Vouchers"/>
                            </button>
                            <button type="object" name="view_entries" class="oe_stat_button" icon="fa-book"
                                    invisible="entry_count == 0">
                                <field name="entry_count" widget="statinfo" string="Journal Entries"/>
                            </button>

                            <button type="object" name="unit_cheques" class="oe_stat_button" icon="fa-credit-card"
                                    invisible="check_count == 0">
                                <field name="check_count" widget="statinfo" string="Cheques"/>
                            </button>


                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="partner_id" readonly="state !='draft'"/>
                                <field name="building_unit" readonly="state !='draft'" required="1"/>
                                <field name="date_payment" readonly="state !='draft'" required="1"/>
                                <field name="documents" widget="many2many_binary"/>
                            </group>
                            <group>
                                <field name="pricing"/>
                                <field name="user_id"/>
                                <field name="team_id"/>
                                <!-- <field name="reservation_id" /> -->
                                <field name="date" readonly="state !='draft'"/>
                                <field name="origin" readonly="state !='draft'"/>
                                <field name="active" invisible="1"/>
                            </group>

                        </group>
                        <notebook colspan="2">
                            <page string="Installments">
                                <group>
                                    <group>
                                        <field name="adv_pay" readonly="old_contract !=False"/>
                                        <field name="month_count"/>
                                        <field name="inst_count"/>
                                    </group>
                                    <group>
                                        <field name="handover_inst"/>
                                        <field name="handover_seq"/>
                                        <field name="total_npv"/>
                                        <button name="update_inst_lines" type='object' string='Calculate'
                                                class='btn btn-primary'/>
                                    </group>
                                </group>
                                <button name="print_installments" type="object" string="Print Installments"
                                        icon="fa-print"/>
                                <field name="loan_line" readonly="0">
                                    <tree string="Installments" editable="bottom" delete="0">
                                        <control>
                                                <create string=" "/>
                                        </control>
                                        <field name="number"/>
                                        <field name="date"/>
                                        <field name="name"/>
                                        <field name="amount"/>
                                        <field name="total_paid_amount" readonly="1"/>
                                        <field name="total_remaining_amount"/>
                                        <field name="npv"/>
                                        <button name="%(itsys_real_estate.action_installment_payment_check)d"
                                                type="action" icon="fa-money" invisible="parent.state != 'confirmed'"
                                                groups="itsys_real_estate.group_payments"/>
                                        <field name="payment_count" invisible="1"/>
                                        <button name="view_payments" type="object" icon="fa-folder"
                                                style="background-color:rgba(0, 160, 74, 0.5);color: #333;"
                                                invisible="payment_count == 0"
                                                groups="itsys_real_estate.group_payments"/>
                                    </tree>
                                </field>

                            </page>

                            <page string="Unit Details">
                                <group>
                                    <group>
                                        <!-- <field name="building_unit" options="{'no_create': True, 'no_open': True}" readonly='1' /> -->
                                        <field name="unit_code" readonly='1'/>
                                        <field name="floor" readonly='1'/>
                                        <field name="address" readonly='1'/>
                                        <field name="type" readonly='1'/>
                                        <field name="status" readonly='1'/>
                                        <field name="building_area" readonly='1'/>
                                    </group>

                                    <group string="Location">
                                        <field name="country" readonly='1'/>
                                        <field name="city" readonly='1'/>
                                        <field name="region" readonly='1'/>
                                        <field name="building" readonly='1'/>
                                        <field name="building_code" readonly='1'/>
                                        <field name="no_of_floors"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Payment Cheques">
                                <group>
                                    <group>
                                        <field name="account_analytic_id" readonly="state !='draft'"/>
                                        <field name="account_income" readonly="state !='draft'"/>
                                        <field name="cheque_bank"/>
                                        <field name="cheque_no"/>
                                        <field name="cheque_acc_id"/>
                                        <field name="journal_id"/>
                                    </group>
                                    <group>
                                        <tr>
                                            <button style="padding:5px !important;"
                                                    name="create_cheques" type="object"
                                                    string="Pay by Bank" class="btn btn-primary"/>
                                            -
                                            <button style="padding:5px !important;"
                                                    name="create_cheques" type="object"
                                                    string="Create Cheques" class="btn btn-primary"/>
                                            -
                                            <button style="padding:5px !important;"
                                                    name="create_cheques" type="object"
                                                    string="Cash payment" class="btn btn-primary"/>
                                        </tr>
                                    </group>
                                </group>
                            </page>
                            <page string="Unit Replace" invisible="state != 'confirmed'">
                                <group>
                                    <group>
                                        <field name="rplc_building_unit"/>
                                        <field name="old_contract" readonly="True"/>
                                    </group>
                                    <group>
                                        <button
                                                name="replace_unit" type="object"
                                                string="Replace" class="btn btn-primary"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Mortgage Calculations">
                                <group>
                                    <group>
                                        <field name="interest_rate" readonly="state !='draft'"/>
                                        <field name="loan_amount" readonly="state !='draft'"/>
                                        <field name="advance_payment_percent" readonly="state !='draft'"/>
                                        <field name="advance_payment" readonly="state !='draft'"/>
                                    </group>
                                    <group>
                                        <field name="principal_interest" readonly="state !='draft'"/>
                                        <field name="property_tax" readonly="state !='draft'"/>
                                        <field name="home_insurance" readonly="state !='draft'"/>
                                        <field name="hoa" readonly="state !='draft'"/>
                                        <field name="monthly_payment" readonly="state !='draft'"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Commission">
                                <group>
                                    <!--<button type="object" string="Get commission" name="get_commission"/>-->
                                    <field name="commission_line" widget="one2many_list"
                                           colspan="4"
                                           nolabel="1">
                                        <tree string="Commission Lines" editable="bottom">
                                            <field name="salesman"/>
                                            <field name="amount"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                        <group>
                            <group></group>
                            <group>
                                <field name="total_amount"/>
                                <field name="paid"/>
                                <field name="balance"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="ownership_contract_form_action" model="ir.actions.act_window">
            <field name="name">Ownership Contract</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ownership.contract</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="view_id" ref="ownership_contract_tree_view"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new Ownership Contract
                </p>
            </field>
        </record>

        <menuitem action="ownership_contract_form_action" id="menu_ownership_contract_form_action"
                  parent="itsys_real_estate.menu_contracts_main" sequence="30"/>
        <menuitem id="menu_reservation_main" name="Reservations" parent="itsys_real_estate.menu_contracts_main"
                  action="ownership_contract_form_action" sequence="1"/>
    </data>
</odoo>