                    <!-- Styled Table -->
                    <br/>

                    <div style="page-break-inside: avoid !important;">
                        <table class="unit-installments-table">
                            <thead>
                                <tr>
                                    <th class="text-left">Date</th>
                                    <th class="text-left">Name</th>
                                    <th class="text-right">Total Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs.read_group(domain=[('id', 'in', docs.ids)], fields=['x_studio_main_plan_1', 'amount:sum'], groupby=['x_studio_main_plan_1'])"
                                   t-as="m_plan">

                                    <t t-set="m" t-value="m_plan.get('x_studio_main_plan_1')"/>

                                    <tr>
                                        <td colspan="2">
                                            <span t-esc="m or 'None'"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="m_plan.get('amount')"/>
                                        </td>
                                    </tr>

                                    <t t-foreach="docs.read_group(domain=[('id', 'in', docs.ids), ('x_studio_main_plan_1','=',m)], fields=['x_studio_sub_plan_1', 'amount:sum'], groupby=['x_studio_sub_plan_1'])"
                                       t-as="s_plan">

                                        <t t-set="s" t-value="s_plan.get('x_studio_sub_plan_1')"/>

                                        <tr>
                                            <td colspan="2">
                                                <span style="color: white" t-esc="'>>>>'"/>
                                                <span t-esc="s or 'None'"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="s_plan.get('amount')"/>
                                            </td>
                                        </tr>
                                    </t>

                                    <t t-foreach="docs.read_group(domain=[('id', 'in', docs.ids), ('x_studio_main_plan_1','=',m), ('x_studio_sub_plan_1','=',s)], fields=['general_account_id', 'amount:sum'], groupby=['general_account_id'])"
                                       t-as="account">
                                        <t t-set="ac" t-value="account.get('general_account_id')"/>

                                        <tr>
                                            <td colspan="2">
                                                <span style="color: white" t-esc="'>>>>>>>>'"/>
                                                <span t-esc="ac[1] if ac else 'None'"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="account.get('amount')"/>
                                            </td>
                                        </tr>

                                        <t t-foreach="docs.read_group(domain=[('id', 'in', docs.ids), ('x_studio_main_plan_1','=',m), ('x_studio_sub_plan_1','=',s), ('general_account_id','=', ac[0] if ac else None)], fields=['general_account_id', 'amount:sum'], groupby=['partner_id'])"
                                           t-as="partner">
                                            <t t-set="p" t-value="partner.get('partner_id')"/>
                                            <tr>
                                                <td colspan="2">
                                                    <span style="color: white" t-esc="'>>>>>>>>>>>>>>>>'"/>
                                                    <span t-esc="p[1] if p else 'None'"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="partner.get('amount')"/>
                                                </td>
                                            </tr>


                                            <t t-foreach="docs.filtered_domain([('x_studio_main_plan_1','=',m), ('x_studio_sub_plan_1','=',s), ('general_account_id','=', ac[0] if ac else None), ('partner_id','=',p[0] if p else None)])"
                                               t-as="doc">
                                                <tr>

                                                    <td class="text-left">
                                                        <span t-field="doc.date"/>
                                                    </td>
                                                    <td class="text-left">
                                                        <span t-field="doc.name"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-field="doc.amount"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <record id="analytic_report_report" model="ir.actions.report">
        <field name="name">Projects Analytic PDF</field>
        <field name="model">account.analytic.line</field>
        <field name="binding_model_id" ref="account.model_account_analytic_line"/>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">itsys_real_estate.analytic_report_template</field>
        <field name="binding_type">report</field>
        <field name="print_report_name">'Projects Analytic Report'</field>
        <field name="binding_view_types">list</field>
    </record>


</odoo>