                    <style>
                        .unit-installments-table {
                        width: 100%;
                        border-collapse: collapse;
                        margin-bottom: 20px;
                        font-size: 14px;
                        }

                        .unit-installments-table th {
                        background-color: #f2f2f2;
                        color: #212529;
                        font-weight: bold;
                        padding: 12px 8px;
                        border: 1px solid #dee2e6;
                        }

                        .unit-installments-table td {
                        padding: 10px 8px;
                        border: 1px solid #dee2e6;
                        vertical-align: middle;
                        }

                        .unit-installments-table tr:nth-child(even) {
                        background-color: #f9f9f9;
                        }

                        .unit-installments-table tr:hover {
                        background-color: #f5f5f5;
                        }

                        .text-center {
                        text-align: center;
                        }

                        .text-right {
                        text-align: right;
                        }

                        .table-header {
                        font-size: 18px;
                        font-weight: bold;
                        margin-bottom: 15px;
                        }
                    </style>

                    <t t-set="company" t-value="docs.env.company"/>

                    <!-- Table Header -->
                    <div class="table-header">Projects Analytic Report</div>
