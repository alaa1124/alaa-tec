<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="contract_conf_view_tree" model="ir.ui.view">
            <field name="name">contract_conf_view_tree</field>
            <field name="model">project.contract.conf</field>
            <field name="arch" type="xml">
                <tree string="contract_conf_tree">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="parent_account_id"/>
<!--                    <field name="revenue_account_id"/>-->
                </tree>
            </field>
        </record>
        <record id="contract_conf_view_form" model="ir.ui.view">
            <field name="name">contract_conf_view_form</field>
            <field name="model">project.contract.conf</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" required="1"/>

                            <field name="parent_account_id" required="1"/>
                               <field name="type" invisible="1"/>


                        </group>
                            <label for="revenue_account_id" string="Revenue Account" invisible="type=='subconstructor'"/>
                            <label for="revenue_account_id" string="Cost Account" invisible="type!='subconstructor'"/>
                            <field name="revenue_account_id" required="1" no_label="1"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>

            </field>
        </record>
    </data>
</odoo>