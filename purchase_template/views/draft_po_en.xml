<odoo>
    <!-- QWeb Reports -->
    <!-- NAME & FILE_NAME should be the same -->
    <template id="report_purchaseorder_document_en_draft">


        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
            <t t-if="o.project_label">
                <center class="border">

                    <h2 t-field="o.project_label"/>

                </center>
            </t>
            <t t-set="forced_vat"
               t-value="o.fiscal_position_id.foreign_vat"/> <!-- So that it appears in the footer of the report instead of the company VAT if it's set -->


            <br></br>

            <t t-set="address">
                <div t-field="o.partner_id"
                     t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                <p t-if="o.partner_id.vat"><t t-esc="o.company_id.account_fiscal_country_id.vat_label or 'Tax ID'"/>:
                    <span t-field="o.partner_id.vat"/>
                </p>
            </t>
            <t t-if="o.dest_address_id">
                <t t-set="information_block">
                    <strong>Shipping address:</strong>
                    <div t-field="o.dest_address_id"
                         t-options="{&quot;widget&quot;: &quot;contact&quot;,
&quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"
                         name="purchase_shipping_address"/>
                </t>
            </t>
            <t t-set="information_block">
                <strong>Shipping address:</strong>
                <div t-if="o.picking_type_id and o.picking_type_id.warehouse_id">
                    <span t-field="o.picking_type_id.warehouse_id.name"/>
                    <div t-field="o.picking_type_id.warehouse_id.partner_id"
                         t-options="{&quot;widget&quot;: &quot;contact&quot;,
&quot;fields&quot;: [&quot;address&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                </div>
            </t>
            <div class="page">
                <div class="oe_structure"/>
                <t t-if="o.project_name">

                    <h4>Location :
                        <span t-field="o.project_name.name"/>
                    </h4>

                </t>
                <h2>Draft PO
                    <span t-field="o.name"/>
                </h2>
                <div id="informations" class="row mt32 mb32">
                    <div t-if="o.user_id" class="col-3 bm-2">
                        <strong>Purchase Representative:</strong>
                        <p t-field="o.user_id" class="m-0"/>
                    </div>
                    <!--                    <div t-if="o.partner_ref" class="col-3 bm-2">-->
                    <!--                        <strong>Your Order Reference:</strong>-->
                    <!--                        <p t-field="o.partner_ref" class="m-0"/>-->
                    <!--                    </div>-->
                    <div t-if="o.order_date" class="col-3 bm-2">
                        <strong>Order Date:</strong>
                        <p t-field="o.order_date" class="m-0"/>
                    </div>
                    <div t-if="o.delivery_period" class="col-4 bm-2">
                        <strong>Delivery Period:</strong>
                        <p>
                            <span t-field="o.delivery_period" class="m-0"/>
                            Week
                        </p>
                    </div>
                    <div t-if="o.end_period" class="col-5 bm-2">
                        <strong>End Period:</strong>
                        <p>
                            <span t-field="o.end_period" class="m-0"/>
                            Week
                        </p>
                    </div>
                </div>
                <!--                    <div id="oo" class="row mt32 mb32">-->
                <!--                     <div t-if="o.start_date" class="col-3 bm-2">-->
                <!--                        <strong>Start Date:</strong>-->
                <!--                        <p t-field="o.start_date" class="m-0"/>-->
                <!--                    </div>-->

                <!--                    <div t-if="o.delivery_date" class="col-4 bm-2">-->
                <!--                        <strong>Delivery Date</strong>-->
                <!--                        <p t-field="o.delivery_date" class="m-0"/>-->
                <!--                    </div>-->
                <!--                    &lt;!&ndash;                    <div t-if="o.partner_ref" class="col-3 bm-2">&ndash;&gt;-->
                <!--                    &lt;!&ndash;                        <strong>Your Order Reference:</strong>&ndash;&gt;-->
                <!--                    &lt;!&ndash;                        <p t-field="o.partner_ref" class="m-0"/>&ndash;&gt;-->
                <!--                    &lt;!&ndash;                    </div>&ndash;&gt;-->
                <!--                    <div t-if="o.end_date" class="col-5 bm-2">-->
                <!--                        <strong>End Date:</strong>-->
                <!--                        <p t-field="o.end_date" class="m-0"/>-->
                <!--                    </div>-->

                <!--                </div>-->
                <div class="border">
                    <span t-field="o.project_note"/>
                </div>


                <table class="table table-sm o_main_table">
                    <thead>
                        <tr>
                            <th name="th_description">
                                <strong>Description</strong>
                            </th>

                            <th name="th_date_req" class="text-center">
                                <strong>Delivery Period</strong>
                            </th>
                            <th name="th_quantity" class="text-right">
                                <strong>Qty</strong>
                            </th>
                            <th name="th_price_unit" class="text-right">
                                <strong>Unit Price</strong>
                            </th>
                            <th name="th_taxes">
                                <strong>Taxes</strong>
                            </th>
                            <th name="th_amount" class="text-right">
                                <strong>Amount</strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-foreach="o.order_line" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                               groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                               groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <td id="product">
                                        <span t-field="line.name"/>
                                    </td>

                                    <td class="text-center">
                                        <span t-field="line.delivery_period"/>
                                        Week
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.product_qty"/>
                                        <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td name="td_taxes" style="width:170px">
                                        <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.price_subtotal"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99" id="section">
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99" id="note">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>
                            <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td colspan="99" id="subtotal">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <div id="total" class="row justify-content-end">
                    <div class="col-4">
                        <table class="table table-sm">
                            <t t-set="tax_totals" t-value="o.tax_totals"/>
                            <t t-set="currency" t-value="o.currency_id"/>
                            <t t-call="account.document_tax_totals"/>
                        </table>
                    </div>
                </div>


                <p t-field="o.notes"/>

                <div class="oe_structure"/>

                <table class="table table-sm" dir="rtl">
                    <thead>
                        <tr>
                            <th class="text-left">Supplier approval</th>
                            <th class="text-left">Approved By</th>
                            <th class="text-left">Financial Revision</th>
                            <th class="text-left">Prepared By</th>


                        </tr>
                    </thead>
                    <tbody>
                        <tr style="height:30px">
                            <td style="height:90px"></td>
                            <td style="height:90px"></td>
                            <td style="height:90px"></td>
                            <td style="height:90px"></td>
                        </tr>
                    </tbody>

                </table>
                <br></br>
                <br></br>
                <table style="width:100%;border:0px" dir="rtl">
                    <thead style="width:100%;border:0px">
                        <tr style="width:100%;border:0px">
                            <th style="width:30%;border:0px" text-align="right">Supplier Stamp</th>

                            <th style="width:40%;border:0px" text-align="center"></th>
                            <th style="width:30%;border:0px" text-align="center">Company Stamp</th>
                        </tr>
                    </thead>
                </table>


            </div>
        </t>


    </template>


    <template id="report_purchaseorder_po_d_en">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="purchase_template.report_purchaseorder_document_en_draft" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>


    <record id="action_purchaseorder_po_draft_en" model="ir.actions.report">
        <field name="name">Draft PO EN</field>
        <field name="model">purchase.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">purchase_template.report_purchaseorder_po_d_en</field>
        <field name="report_file">purchase_template.report_purchaseorder_po_d_en</field>
        <field name="print_report_name">'Draft Po EN- %s' % (object.name)</field>
        <field name="binding_model_id" ref="purchase.model_purchase_order"/>
        <field name="binding_type">report</field>
    </record>

</odoo>