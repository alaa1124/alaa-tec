<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="purchase_order_form_custom" model="ir.ui.view">
        <field name="name">purchase_order_form_custom</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

          <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                    <page string="Project Information" name="studio_page_Qk72U">
                        <group  >
                            <group  >
                                <field name="project_note" readonly="state in ('purchase', 'done', 'cancel')"/>
                                <field name="project_label" readonly="state in ('purchase', 'done', 'cancel')"/>
                                <field name="project_name" readonly="state in ('purchase', 'done', 'cancel')"/>
                            </group>

                        </group>
                    </page>
                </xpath>

        </field>
    </record>
</odoo>