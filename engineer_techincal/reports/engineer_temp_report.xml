<odoo>
    <record id="paperformat_appointmentReport" model="report.paperformat">
        <field name="name">Paperformat Engineer Template</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="dpi">90</field>
    </record>


    <template id="engineer_temp_report">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="web.external_layout">
                <style>
                    table {
                        border-collapse: collapse;
                        width: 100%;
                    }
                    .reportBody {
                        margin-bottom: 55px;
                        border: 1px solid black !important;
                    }
                    .reportBody th, td {
                        border: 1px solid black;
                        padding: 10px;
                        text-align: center;
                    }
                    .reportHead {
                        margin-bottom: 4rem;
                        border: none;
                        direction: rtl;
                        table-layout: fixed;
                        width: 100%;
                    }
                    .reportHead td {
                        padding: 10px 0px;
                    }
                    .reportHead,
                    .reportHead * {
                        border: none !important;
                        border-width: 0 !important;
                    }
                    .reportEnd table th {
                        text-align: right;
                    }
                </style>

                <div class="reportPage">

                    <t t-if="doc.type == 'owner'">
                        <table class="reportHead">
                            <thead>
                                <tr>
                                    <th>مكتب البيت المعمارى للإستشارات</th>
                                    <th>مشروع
                                        <t t-if="docs">
                                            <t t-out="docs[0].project_id.name"/>
                                        </t>
                                    </th>
                                    <th>إسم المقاول:
                                        <t t-if="docs">
                                            <t t-out="docs[0].contract_id.name"/>
                                        </t>
                                    </th>
                                </tr>
                            </thead>
                        </table>
                    </t>

                    <t t-if="doc.type == 'subconstructor'">
                        <table class="reportHead">
                            <thead>
                                <tr>
                                    <th>إسم المقاول:
                                        <t t-if="docs">
                                            <t t-out="docs[0].subcontractor.name"/>
                                        </t>
                                    </th>

                                    <th>مشروع
                                        <t t-if="docs">
                                            <t t-out="docs[0].project_id.name"/>
                                        </t>
                                    </th>
                                    <th>إسم العقد:
                                        <t t-if="docs">
                                            <t t-out="docs[0].contract_id.name"/>
                                        </t>
                                    </th>

                                </tr>
                            </thead>
                        </table>
                    </t>

                    <!-- Line Items Table -->
                    <table style="direction: rtl;" class="reportBody">
                        <thead>
                            <tr>
                                <th>رقم البند</th>
                                <th colspan="2">بنود الأعمال</th>
                                <th>الوحدة</th>
                                <th>الكمية السابقة</th>
                                <th>الكمية الحالية</th>
                                <th>الكمية الإجمالية</th>
                                <th>الفئة بالجنيه</th>
                                <th>قيمة إجمالي للأعمال</th>
                                <th>قيمة السابق صرفه</th>
                                <th>المؤجل صرفه</th>
                                <th>قيمة المستحق صرفه</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="total_amount_value" t-value="0"/>
                            <t t-set="total_prev_amount_paid" t-value="0"/>
                            <t t-set="total_deferred" t-value="0"/>
                            <t t-set="total_deserved" t-value="0"/>
                            <t t-set="order_count" t-value="0"/>

                            <t t-foreach="doc.line_ids" t-as="line">
                                <t t-set="order_count" t-value="(order_count or 0) + 1"/>
                                <t t-set="total_amount_value" t-value="(total_amount_value or 0) + (line.amount or 0)"/>
                                <t t-set="total_prev_amount_paid" t-value="(total_prev_amount_paid or 0) + (line.previous_amount or 0)"/>
                                <t t-set="total_deferred" t-value="(total_deferred or 0) + ((line.amount or 0) - (line.price or 0))"/>
                                <t t-set="total_deserved" t-value="(total_deserved or 0) + (line.amount or 0)"/>

                                <tr>
                                    <td><t t-esc="order_count"/></td>
                                    <td colspan="2"><t t-out="line.item.name"/></td>
                                    <td><t t-out="line.uom_id.name"/></td>
                                    <td><t t-out="line.previous_quanity"/></td>
                                    <td><t t-out="line.qty"/></td>
                                    <td><t t-out="line.previous_quanity"/></td>
                                    <td><t t-out="line.price_unit"/></td>
                                    <td><t t-out="line.amount"/></td>
                                    <td><t t-out="line.previous_amount"/></td>
                                    <td><t t-out="round(line.deferred or 0, 2)"/></td>
                                    <td><t t-out="line.differance"/></td>
                                </tr>
                            </t>

                            <tr style="font-weight:bold; background:#f0f0f0;border-top: double">
                                <td colspan="8"><strong>إجمالى الأعمال</strong></td>
                                <td><t t-esc="total_amount_value"/></td>
                                <td><t t-esc="total_prev_amount_paid"/></td>
                                <td><t t-esc="total_deferred"/></td>
                                <td><t t-esc="total_deserved"/></td>
                            </tr>

                            <tr style="font-weight:bold; background:#f0f0f0;">
                                <td colspan="8"><strong>إجمالى الخصم</strong></td>
                                <td colspan="4"><t t-out="doc.total_deduction"/></td>
                            </tr>

                            <tr style="font-weight:bold; background:#f0f0f0;">
                                <td colspan="8"><strong>إجمالى البدل</strong></td>
                                <td colspan="4"><t t-out="doc.total_allowance"/></td>
                            </tr>

                            <tr style="font-weight:bold; background:#f0f0f0;">
                                <td colspan="8"><strong>المبلغ الإجمالى</strong></td>
                                <td colspan="4"><t t-out="doc.amount_total"/></td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Deductions Table -->
                    <table style="direction: rtl; table-layout: fixed; page-break-inside: avoid;" class="reportBody">
                        <thead>
                            <tr>
                                <th colspan="2">الخصومات</th>
                            </tr>
                            <tr>
                                <th>الإسم</th>
                                <th>القيمة</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.deduction_ids" t-as="line">
                                <tr>
                                    <td><t t-out="line.name.name"/></td>
                                    <td><t t-out="line.value"/></td>
                                </tr>
                            </t>
                            <tr style="font-weight:bold; background:#f0f0f0;border-top: double">
                                <td><strong>إجمالى الخصم</strong></td>
                                <td><t t-out="doc.total_deduction"/></td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Allowances Table -->
                    <table style="direction: rtl; table-layout: fixed; page-break-inside: avoid;" class="reportBody">
                        <thead>
                            <tr>
                                <th colspan="2">البدلات</th>
                            </tr>
                            <tr>
                                <th>الإسم</th>
                                <th>القيمة</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.allowance_ids" t-as="line">
                                <tr>
                                    <td><t t-out="line.name.name"/></td>
                                    <td><t t-out="line.value"/></td>
                                </tr>
                            </t>
                            <tr style="font-weight:bold; background:#f0f0f0;border-top: double">
                                <td><strong>إجمالى البدل</strong></td>
                                <td><t t-out="doc.total_allowance"/></td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Footer Signature Section -->
                    <div class="reportEnd" style="padding-right:20px; page-break-inside:avoid;">
                        <table class="reportHead">
                            <tbody>
                                <tr>
                                    <th>مهندس المشروع</th>
                                    <th>مهندس مكتب فنى</th>
                                    <th>نائب مدير المشروعات</th>
                                    <th style="padding-right:20px;">يُعتمد</th>
                                </tr>
                                <tr>
                                    <td>م/ </td>
                                    <td>م/</td>
                                    <td>م/ ضياء عبد الكريم</td>
                                    <td style="padding-right:20px;">
                                        مدير المشروعات<br/><br/>
                                        م/ عبد الكريم السيد محمود
                                    </td>
                                </tr>
                                <tr>
                                    <td>التوقيع/ </td>
                                    <td>التوقيع/ </td>
                                    <td>التوقيع/ </td>
                                    <td style="padding-right:20px;">التوقيع/ </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Declaration -->
                    <div style="page-break-inside:avoid;">
                        <span style="direction:rtl; padding-bottom:30px; padding-top:30px; line-height: 2; display:block;">
                            أقر بصحة الحساب وأستلمت من شركة دى ايه للتطوير العقارى قيمة المستحق لى عن هذا العقد حتى هذا المستخلص .
                            <br/>
                            صافى قيمة هذا المستخلص
                            <t t-esc="doc.amount_total"/>
                            جم فقط لاغير .
                            <br/>
                            أستلمت القيمة نقدى بتاريخ
                            <span style="display:inline-block; width:30px;"/>/<span style="display:inline-block; width:30px;"/>/<span style="display:inline-block; width:30px;"/>
                            <br/>
                            أقر بصحة الكميات والفئات المدرجة بالمستخلصات التى قمت بتنفيذها للشركة طبقاً لما تم تنفيذه بالموقع .
                        </span>
                    </div>
                </div>
            </t>
        </t>
    </t>
</template>

<!--Engineer Template Report Action-->
    <record id="engineer_temp_owner_report_action" model="ir.actions.report">
        <field name="name">Engineer Template Report</field>
        <field name="model">project.engineer.techincal</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="model_project_engineer_techincal"/>
        <field name="binding_type">report</field>
        <field name="report_name">engineer_techincal.engineer_temp_report</field>

    </record>



</odoo>
