<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="template_eng_view_form" model="ir.ui.view">
            <field name="name">template_eng_view_form</field>
            <field name="model">eng.wizard</field>
            <field name="arch" type="xml">
                <form string="_form">
                    <sheet>
                        <group>
                            <field name="contract_id" invisible="1"/>
                            <field name="eng_id" invisible="1"/>
                            <field name="contract_items" invisible="1"/>
                            <field name="item_ids" invisible="1">
                                <tree >
                                    <field name="name"/>
                                    <field name="related_job_id"/>
                                    <field name="uom_id"/>

                                </tree>
                            </field>
                            <field name="contract_line_ids" string="Contract Lines"
                                   options="{'no_create': True, 'no_quick_create': True, 'no_open': True,'no_create_edit':True}">
                                <tree editable="bottom" create="0" edit="0">
                                    <field name="code"/>
                                    <field name="item"/>
                                    <field name="name"/>
                                    <field name="related_job_id"/>
                                    <field name="uom_id"/>
                                    <field name="qty"/>
                                    <field name="price_unit"/>
                                    <field name="amount_subtotal"/>
                                    <field name="amount_total"/>
                                </tree>
                            </field>

                        </group>
                    </sheet>
                    <footer>
                        <button name="save_payment" class="oe_highlight" string="save" type="object"
                        />

                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>