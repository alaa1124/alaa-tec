<odoo>
    <data>
        <record id="extend_guarantee_tree_view" model="ir.ui.view">
            <field name="name">extend Gurantee</field>
            <field name="model">guarantee.extension</field>
            <field name="arch" type="xml">
                <list string="extend Gurantee">
                    <field name="number"/>
                    <field name="letter_guarantee_id"/>
                    <field name="partner_id"/>
                    <field name="journal_id"/>
                    <field name="letter_type"/>
                    <field name="letter_amount"/>
                    <field name="transaction_date"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="letter_number"/>
                    <field name="extend_start_date"/>
                    <field name="extend_end_date"/>
                </list>
            </field>
        </record>
        <record id="extend_guarantee_form_view" model="ir.ui.view">
            <field name="name">extend Gurantee</field>
            <field name="model">guarantee.extension</field>
            <field name="arch" type="xml">
                <form string="extend Gurantee">
                    <header>
                        <button name="confirm_button" string="Confirm" type="object"
                                class="oe_highlight"
                                invisible="state!='draft'"
                        />
                        <button name="cancel_button" string="Cancel" type="object"
                                class="oe_highlight"
                                invisible="state!='confirm' or is_close==True"
                        />
                        <button name="action_draft" type="object" string="Set Draft"
                                invisible="state!='cancel'"
                        />
                        <field name="state" widget="statusbar"
                               statusbar_colors='{"confirm":"blue"}'/>

                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="number" readonly="True"/>
                                <field name="letter_guarantee_id" required="True"/>
                                <field name="transaction_date" readonly="True"/>
                                <field name="start_date" readonly="True"/>
                                <field name="end_date" readonly="True"/>
                                <field name="is_expenses"/>
                                <field name="expenses_amount"
                                       readonly="is_expenses==False"
                                />
                                <field name="analytic_id"
                                       readonly="is_expenses==False"
                                />
                                <field name="expenses_id" readonly="True"/>

                            </group>
                            <group>
                                <field name="partner_id" readonly="True"/>
                                <field name="journal_id" readonly="True"/>
                                <field name="letter_amount" readonly="True"/>
                                <field name="raise_amount" required="True"/>
                                <field name="total_amount"/>
                                <field name="letter_type" readonly="True"/>
                                <field name="config_id" readonly="True"/>
                                <field name="extend_start_date"/>
                                <field name="extend_end_date" required="True"/>
                                <field name="is_close" invisible="True"/>

                            </group>
                        </group>
                        <group>
                            <field name="note"/>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>
        <record id="guarantee_ext_action_view" model="ir.actions.act_window">
            <field name="name">Extend Gurantee</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">guarantee.extension</field>
            <field name="view_mode">list,form</field>
        </record>
        <menuitem id="extend_guarantee_act_menu120" name="Extend Gurantee" parent="letter_guarantee_categ_menu"
                  action="guarantee_ext_action_view"/>

        <record id="extend_guarantee_sequencejj" model="ir.sequence">
            <field name="name">guarantee ext</field>
            <field name="code">guarantee.extension</field>
            <field name="prefix">GE</field>
            <field name="padding">0</field>
        </record>


    </data>
</odoo>