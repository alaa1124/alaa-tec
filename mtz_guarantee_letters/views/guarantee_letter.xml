<odoo>
    <data>
        <record id="letter_guarantee_tree_view" model="ir.ui.view">
            <field name="name">Gurantee Letter</field>
            <field name="model">guarantee.letter</field>
            <field name="arch" type="xml">
                <list string="Gurantee Letter">
                    <field name="number"/>
                    <field name="partner_id"/>
                    <field name="journal_id"/>
                    <field name="letter_type"/>
                    <field name="letter_amount"/>
                    <field name="cover_amount_percentage"/>
                    <field name="cover_amount"/>
                    <field name="letter_amount"/>
                    <field name="transaction_date"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="letter_number"/>
                </list>
            </field>
        </record>
        <record id="letter_guarantee_form_view" model="ir.ui.view">
            <field name="name">Gurantee Letter</field>
            <field name="model">guarantee.letter</field>
            <field name="arch" type="xml">
                <form string="Gurantee Letter">
                    <header>
                        <button name="confirm_button" string="Confirm" type="object" class="oe_highlight"
                                invisible="state!='draft'"/>
                        <button name="cancel_button" string="Cancel" type="object" class="oe_highlight"
                               invisible="state!='confirm' or is_close==True"/>
                        <button name="action_draft" type="object" string="Set Draft"
                                invisible="state!='cancel'"
                        />
                        <field name="state" widget="statusbar" statusbar_colors='{"confirm":"blue"}'/>

                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="number" readonly="True"/>
                                <field name="transaction_date" required="True"
                                       readonly="state!='draft'"/>
                                <field name="start_date" required="True"
                                       readonly="state!='draft'"/>
                                <field name="end_date" required="True"

                                       readonly="state!='draft'" />
                                <field name="is_expenses"/>
                                <field name="is_letter_name" invisible="True"/>
                                <field name="expenses_amount" readonly="is_expenses=='False'"/>
                                <field name="analytic_id" readonly="is_expenses=='False'"/>
                                <field name="letter_number" required="True" readonly="state!='draft'" />
                                <field name="move_id" required="True" readonly="state!='draft'" />
                                <field name="is_close" invisible="False"/>

                            </group>
                            <group>
                                <field name="partner_id" required="True" readonly="state!='draft'" />
                                <field name="journal_id" required="True" readonly="state!='draft'" />
                                <field name="letter_amount" required="True" readonly="state!='draft'" />
                                <field name="cover_amount_percentage" required="True" readonly="state=='confirm'"/>
                                <field name="cover_amount" required="True" readonly="state=='confirm'"/>
                                <field name="letter_type" required="True" options="{'horizontal': false}" widget="radio"/>
                                <field name="config_id" required="True" readonly="is_letter_name=='False'"/>
                                 <field name="expenses_id" readonly="True"/>

                            </group>
                        </group>
                        <group>
                            <field name="note"/>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>
        <record id="guarantee_letter_action_view" model="ir.actions.act_window">
            <field name="name">Gurantee Letter  </field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">guarantee.letter</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="letter_guarantee_root_menu" name="Guarantee Letter" sequence="10" web_icon="mtz_guarantee_letters,static/description/icon.png" />
        <menuitem id="letter_guarantee_categ_menu" name="Guarantee Letter" parent="letter_guarantee_root_menu"
                  sequence="0"/>
        <menuitem id="letter_guarantee_act_menu" name="Guarantee Letter" parent="letter_guarantee_categ_menu"
                  action="guarantee_letter_action_view" sequence="0"/>

        <record id="letter_guarantee_sequence" model="ir.sequence">
            <field name="name">guarantee letter</field>
            <field name="code">guarantee.letter</field>
            <field name="prefix">LG</field>
            <field name="padding">0</field>
        </record>


    </data>
</odoo>