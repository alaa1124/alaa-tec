<odoo>


    <data>

        <record id="view_bank_statement_line_tree_bank_rec_widget_inherit_tender_item" model="ir.ui.view">
            <field name="name">account.bank.statement.tree</field>
            <field name="model">account.bank.statement.line</field>
            <field name="inherit_id" ref="account_accountant.view_bank_statement_line_tree_bank_rec_widget"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='id']" position="before">
                    <field name="allowed_item_ids" column_invisible="1"/>
                    <field name="project_id"/>
                    <field name="item_id" readonly="not project_id"/>
                    <field name="item_line" readonly="not item_id"/>
                </xpath>
            </field>
        </record>

    </data>

</odoo>