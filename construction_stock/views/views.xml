<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="view_picking_form_custom" model="ir.ui.view">
        <field name="name">view_picking_form_custom</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='owner_id']" position="after">
                <field name="project_id" readonly="state in ['cancel', 'done']"
                       invisible="picking_type_code!='outgoing'"/>
                <!-- Add your fields or attributes here -->
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                <field name="allowed_item_ids" column_invisible="1"/>
                <field name="project_id" column_invisible="1"/>

                <field name="item_id" column_invisible="parent.picking_type_code!='outgoing'"
                       readonly="not project_id"/>
                <field name="item_line" column_invisible="parent.picking_type_code!='outgoing'" readonly="not item_id"/>
                <!-- Add your fields or attributes here -->
            </xpath>


        </field>
    </record>

    <record id="stock_valuation_layer_tree_construction" model="ir.ui.view">
        <field name="name">stock_valuation_layer_tree_construction</field>
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//tree" position="inside">
                <field name="item_id" optional="show"/>
                <field name="item_line" optional="show"/>
            </xpath>

        </field>
    </record>


</odoo>