<odoo>
    <template id="custom_studio_report_inherit" inherit_id="studio_customization.studio_report_docume_5f31ba80-b361-490b-af44-e38164bc68b6_copy_1">
        <!-- Example: Modify the header -->
        <xpath expr="//div[@class='header']" position="replace">
            <div class="header" style="text-align: center; font-weight: bold; border-bottom: 2px solid black;">
                <h2>Custom Report Header</h2>
            </div>
        </xpath>

        <!-- Example: Add a new column to the table -->
        <xpath expr="//table/thead/tr" position="inside">
            <th style="border: 1px solid black; padding: 8px;">New Column</th>
        </xpath>
        <xpath expr="//table/tbody/tr" position="inside">
            <td style="border: 1px solid black; padding: 8px;">Custom Data</td>
        </xpath>

        <!-- Example: Change the footer -->
        <xpath expr="//div[@class='footer']" position="replace">
            <div class="footer" style="text-align: center; font-size: 12px; margin-top: 20px;">
                <p>Generated by Odoo | Custom Footer Text</p>
            </div>
        </xpath>
    </template>
</odoo>
