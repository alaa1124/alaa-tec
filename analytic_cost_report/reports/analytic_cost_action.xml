<odoo>
    <!-- Define the report action -->
    <record id="analytic_cost_report_action" model="ir.actions.report">
        <field name="name">Analytic Costs Report</field>
        <!-- Correct the model reference -->
        <field name="model">account.analytic.line</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="account.model_account_analytic_line"/>
        <field name="binding_type">report</field>
        <!-- Use the correct report name format -->
        <field name="report_name">analytic_cost_report.report_analytic_template</field>
    </record>

    <!-- Define the report template -->
    <template id="report_analytic_template">
        <t t-name="analytic_cost_report.report_analytic_template">
            <div>
                <h1>Analytic Costs Report</h1>
            </div>
        </t>
    </template>
</odoo>


