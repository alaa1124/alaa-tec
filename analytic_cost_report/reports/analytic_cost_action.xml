<odoo>
    <record id="analytic_cost_report_action" model="ir.actions.report">
        <field name="name">Analytic Reportttt1</field>
        <field name="model">account.analytic.line</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="account.model_account_analytic_line"/>
        <field name="binding_type">report</field>
        <field name="report_name">analytic_cost_report.action_report_analytic_template</field>
        <field name="report_file">analytic_cost_report.action_report_analytic_template</field>
        <field name="print_report_name">"Analytic Report - " + object.name</field>
    </record>

    <template id="action_report_analytic_template">
        <t t-call="web.basic_layout">

            <!-- Header Section -->
            <div class="header" style="direction: rtl; text-align: center; border-bottom: 1px solid black; padding-bottom: 10px; margin-bottom: 20px;">
                <t t-foreach="docs[:1]" t-as="doc">
                    <p style="margin: 0; font-weight: bold; font-size: 16px;">
                        <span t-esc="doc.company_id.name"/>
                    </p>
                </t>
            </div>

            <!-- Report Title -->
            <div class="page" style="direction: rtl; text-align: center;">
                <h2 style="text-align: center; margin-bottom: 20px;">Analytic Reporting</h2>
            </div>

            <!-- Styled Table Section -->
            <table style="border-collapse: collapse; width: 100%; text-align: center; font-family: Arial, sans-serif; font-size: 12px;">
                <thead>
                    <tr style="border: 1px solid black; background-color: #f2f2f2;">
                        <th style="border: 1px solid black; padding: 10px; width: 15%;">Date</th>
                        <th style="border: 1px solid black; padding: 10px; width: 55%;">Description</th>
                        <th style="border: 1px solid black; padding: 10px; width: 30%;">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="docs" t-as="line">
                        <tr>
                            <td style="border: 1px solid black; padding: 8px; word-wrap: break-word;" t-esc="line.date"/>
                            <td style="border: 1px solid black; padding: 8px; word-wrap: break-word; text-align: right;" t-esc="line.name"/>
                            <td style="border: 1px solid black; padding: 8px; word-wrap: break-word;" t-esc="line.amount"/>
                        </tr>
                    </t>
                </tbody>
            </table>

            <!-- Styling Section -->
            <style>
                /* Ensure columns are consistent */
                th, td {
                    word-wrap: break-word; /* Wrap long text to prevent overflow */
                    text-align: center; /* Center text alignment for numbers */
                }

                td:nth-child(2) {
                    text-align: right; /* Align descriptions to the right for Arabic text */
                }

                table {
                    margin-top: 20px; /* Add spacing above the table */
                }
            </style>
        </t>
    </template>
</odoo>
