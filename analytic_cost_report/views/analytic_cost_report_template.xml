<template id="analytic_cost_report_view">
    <t t-call="web.layout">
        <div class="container">
            <t t-foreach="docs" t-as="doc">
                <h2>Analytic Costs Report</h2>
                <p>Date: <span t-esc="date_today"/></p>

                <table>
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Project</th>
                            <th>Cost</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="doc.analytic_lines" t-as="line">
                            <td t-esc="line.date"/>
                            <td t-esc="line.name"/>
                            <td t-esc="line.project_id.name"/>
                            <td t-esc="line.amount"/>
                        </tr>
                    </tbody>
                </table>
            </t>
        </div>
    </t>
</template>

