<template id="report_analytic_costs" inherit_id="account.report_invoice">
    <xpath expr="//div[@class='page']" position="inside">
        <div class="header">
            <h2>Analytic Report</h2>
            <p>Date: <span t-esc="doc.date_today"/></p>
        </div>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Project</th>
                    <th>Cost</th>
                </tr>
            </thead>
            <tbody>
                <tr t-foreach="doc.analytic_lines" t-as="line">
                    <td t-esc="line.date"/>
                    <td t-esc="line.name"/>
                    <td t-esc="line.project_id.name"/>
                    <td t-esc="line.amount"/>
                </tr>
            </tbody>
        </table>
    </xpath>
</template>
