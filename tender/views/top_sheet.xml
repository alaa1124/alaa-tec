<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="top_sheet_view_tree" model="ir.ui.view">
            <field name="name">_view_tree</field>
            <field name="model">top.sheet</field>
            <field name="arch" type="xml">
                <tree string="_tree">
                    <field name="project_id"/>
                    <field name="total_cost"/>
                    <field name="split_method"/>
                </tree>
            </field>
        </record>
        <record id="top_sheet_view_form" model="ir.ui.view">
            <field name="name">top_sheet_view_form</field>
            <field name="model">top.sheet</field>
            <field name="arch" type="xml">
                <form string="_tree">
                    <header>
                        <button name="action_confirm" type="object" string="Confirm"  invisible="state!='draft'" />
                        <!--                        <button name="set_draft" type="object" string="Set Draft"  invisible="state!='cancel'" />-->
                        <button name="action_cancel" type="object" string="Cancel"  invisible="state!='confirm'" />
                        <button name="set_draft" type="object" string="Set Draft"  invisible="state!='cancel'" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,cancel"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="project_id" context="{'default_top_sheet':True}"  readonly="state!='draft'" />
                            <field name="total_cost" />
                            <field name="split_method"  readonly="state!='draft'" />
                        </group>
                        <field name="line_ids"  readonly="state!='draft'" >
                            <tree editable="bottom">
                                <field name="product_id" context="{'default_top_sheet':True}"/>
                                <field name="prec" sum="total"/>
                                <field name="price" sum="total"/>
                            </tree>
                        </field>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>

                </form>
            </field>
        </record>
    </data>
</odoo>